<container xmlns="http://symfony.com/schema/dic/services">
    <services>

        <service class="Brille24\SyliusCustomerOptionsPlugin\Validator\CustomerOptionAssociationConstraintValidator"
                 id="brille24.customer_options_plugin.validator.constraints.customer_option_association_constraint_validator">
            <tag name="validator.constraint_validator"/>
        </service>

        <service class="Brille24\SyliusCustomerOptionsPlugin\Validator\CustomerOptionConfigurationConstraintValidator"
                 id="brille24.customer_options_plugin.validator.constraints.customer_option_configuration_validator">
            <tag name="validator.constraint_validator"/>
        </service>

        <service class="Brille24\SyliusCustomerOptionsPlugin\Validator\ConditionalConstraintValidator"
                 id="brille24.customer_options_plugin.validator.constraints.conditional_constraint_validator"
        >
            <tag name="validator.constraint_validator" />
            <argument type="service" id="request_stack" />
        </service>

    </services>
</container>